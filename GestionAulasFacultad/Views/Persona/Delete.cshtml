    <dl class="dl-horizontal row ">

        <div class="col-2">

            <dt>
                @Html.DisplayNameFor(model => model.PrimerNombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PrimerNombre)
            </dd>
        </div>
        <div class="col-2">
            <dt>
                @Html.DisplayNameFor(model => model.OtrosNombres)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OtrosNombres)
            </dd>
        </div>
        <div class="col-2">
            <dt>
                @Html.DisplayNameFor(model => model.PrimerApellido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PrimerApellido)
            </dd>
        </div>
        <div class="col-2">
            <dt>
                @Html.DisplayNameFor(model => model.SegundoApellido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SegundoApellido)
            </dd>
        </div>
        <div class="col-2">
            <dt>
                @Html.DisplayNameFor(model => model.DocumentoIdentidad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DocumentoIdentidad)
            </dd>
        </div>
        <div class="col-2">
            <dt>
                @Html.DisplayNameFor(model => model.Celular)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Celular)
            </dd>
        </div>


    </dl>

    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-3"></div>
            <div class="form-actions no-color col-6 d-flex justify-content-center">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-success" })
            </div>

            <div class="col-3"></div>
        </div>
    }
</div>
