@model IEnumerable<GestionAulasFacultad.Models.ModeloMateriaGUI>

@{
    ViewBag.Title = "Index";
}
<h2 class="d-flex justify-content-center">Lista de materias</h2>

<br />

<div class="row d-flex justify-content-center">
    <div class="col-4.5">

        <table class="table table-responsive table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombrePrograma)
                    </th>
                    <th>Opcion</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombrePrograma)
                    </td>
                    <td>

                        <div class="row">
                            <div class="col-4">

                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-primary fa fa-pencil" })

                            </div>
                            <div class="col-4">

                                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn-lg btn-warning fa fa-info" })

                            </div>
                            <div class="col-4">

                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash" })

                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>
        @Html.Partial("_FooterPagedList")

        @Html.ActionLink("Crear materia", "Create", new { }, new { @class = "btn btn-success btn-lg d-flex justify-content-center" })
    </div>
</div>


