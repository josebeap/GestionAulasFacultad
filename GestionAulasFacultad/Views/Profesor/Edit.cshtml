@model GestionAulasFacultad.Models.ModeloProfesorGUI

@{
    ViewBag.Title = "Edit";
}

<h2 class="d-flex justify-content-center">Editar un profesor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NombrePersona, "Persona", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdPersona, new SelectList(Model.ListaPersonas, "Id", "NombreCompleto"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdPersona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdPrograma, "Programa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdPrograma, new SelectList(Model.ListaProgramas, "Id", "Nombre"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdPrograma, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-4"></div>
            <div class="form-group col-2">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
            <div class="col-2">
                @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-4"></div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
