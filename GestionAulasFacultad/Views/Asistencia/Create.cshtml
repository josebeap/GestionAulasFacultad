@model GestionAulasFacultad.Models.ModeloAsistenciaGUI

@{
    ViewBag.Title = "Create";
}

<h2 class="d-flex justify-content-center">Crear una asistencia</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container">
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-6">
            @Html.LabelFor(model => model.NombreMonitor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdMonitor, new SelectList(Model.ListaMonitores, "Id", "NombrePersona"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdMonitor, " ", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-6">
            @Html.LabelFor(model => model.NombreProfesor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdProfesor, new SelectList(Model.ListaProfesores, "Id", "NombrePersona"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdProfesor, " ", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            @Html.LabelFor(model => model.FechaHoraInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.TextBoxFor(model => model.FechaHoraInicio, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FechaHoraInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-6">
            @Html.LabelFor(model => model.FechaHoraFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FechaHoraFin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FechaHoraFin, " ", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            @Html.LabelFor(model => model.NombreAula, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdAula, new SelectList(Model.ListaAulas, "Id", "Nombre"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdAula, " ", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-6">
            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @Value = "En curso" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="form-group col-1">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </div>
        <div class="col-1 ">
            @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-danger" })
        </div>
        <div class="col-4"></div>
    </div>

</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
