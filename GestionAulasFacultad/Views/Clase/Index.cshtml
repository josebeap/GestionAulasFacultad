@model IEnumerable<GestionAulasFacultad.Models.ModeloClaseGUI>

@{
    ViewBag.Title = "Index";
}

<h2 class="d-flex justify-content-center">Lista de clases</h2>

<br />

<div class="row d-flex justify-content-center">
    <div class="col-8.5">

        <table class="table table-responsive table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreMateria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CantidadHoras)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaHoraInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreAula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreProfesor)
                    </th>
                    <th class="align-content-center">
                        Opcion
                    </th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreMateria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadHoras)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHoraInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreAula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreProfesor)
        </td>
        <td>
            <div class="row">
                <div class="col-4">

                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-primary fa fa-pencil" })

                </div>
                <div class="col-4">

                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn-lg btn-warning fa fa-info" })

                </div>
                <div class="col-4">

                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash" })

                </div>
            </div>

        </td>
    </tr>
</tbody>
    }

                </table>
                @Html.Partial("_FooterPagedList")

                @Html.ActionLink("Crear clase", "Create", new { }, new { @class = "btn btn-success btn-lg d-flex justify-content-center" })
            </div>
            </div>


