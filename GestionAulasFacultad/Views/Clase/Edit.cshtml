@model GestionAulasFacultad.Models.ModeloClaseGUI

@{
    ViewBag.Title = "Edit";
}

<h2 class="d-flex justify-content-center">Editar una clase</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group col-6">
                @Html.LabelFor(model => model.NombreProfesor, "Profesor", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdProfesor, new SelectList(Model.ListaProfesores, "Id", "NombrePersona"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdProfesor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-6">
                @Html.LabelFor(model => model.NombreAula, "Aula", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdAula, new SelectList(Model.ListaAulas, "Id", "Nombre"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdAula, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                @Html.LabelFor(model => model.NombreMateria, "Materia", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdMateria, new SelectList(Model.ListaMaterias, "Id", "Nombre"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdMateria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-6">
                @Html.LabelFor(model => model.CantidadHoras, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CantidadHoras, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CantidadHoras, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-4"></div>
            <div class="form-group col-4">
                @Html.LabelFor(model => model.FechaHoraInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FechaHoraInicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaHoraInicio, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-4"></div>
        </div>

        <div class="row">
            <div class="col-4"></div>
            <div class="form-group col-2">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
            <div class="col-2">
                @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-4"></div>
        </div>


    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
